{
	"extends": "@react-native/typescript-config/tsconfig.json",
	"compilerOptions": {
		"target": "es5",
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"paths": {
			"src/*": ["./src/*"],
			"tests/*": ["./__tests__/*"],
			"@assets/*": ["./src/assets/*"],
			"@components/*": ["./src/components/*"],
			"@navigation/*": ["./src/navigation/*"],
			"@screens/*": ["./src/screens/*"],
			"@services/*": ["./src/services/*"],
			"@utils/*": ["./src/utils/*"]
		}
	},
	"exclude": [
		"node_modules",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js"
	]
}
